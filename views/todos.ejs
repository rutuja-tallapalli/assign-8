<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>My todo Manager</title>
    <link rel="stylesheet" href="./css/style.css" />
    <script>
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      function updateTodo(id) {
        fetch(`/todos/${id}/markAsCompleted`, {
          method: "put",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          })
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.log(err));
      }

      function deleteTodo(id) {
        fetch(`/todos/${id}`, {
          method: "delete",
          headers: {"Content-Type": "application/json"},
          body: JSON.stringify({
            _csrf: token,
          })
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.log(err));
      }
    </script>
  </head>
  <body>
    <ul class="list-none pl-4">
      <% for(var i=0; i<tasks.length; i++) {%>
      <li class="Todo-Item flex gap-2 items-center">
        <div
          class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50"
        >
          <input
            id="todo-checkbox-<%= tasks[i].id %>"
            type="checkbox"
            <%=tasks[i].completed ? "checked" : "" %>
            onclick="updateTodo(<%= tasks[i].id %> )"
            class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300"
          />
          <label
            for="todo-checkbox-<%= tasks[i].id %>"
            class="ml-2 text-sm text-gray-600 cursor-pointer"
            ><%= tasks[i].title %></label
          >
        </div>
        <a class="hidden trash-icon" href="#!" onclick="deleteTodo(<%= tasks[i].id %>)">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="flex items-center justify-center"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
            />
          </svg>
        </a>
      </li>
      <% } %>
    </ul>
  </body>
</html>
